#!/usr/bin/env groovy
@Library('jenkins-shared-library')
def gv

pipeline {
    agent any
    tools {
        maven 'maven-b'
    }
    environment {
        IMAGE_NAME = 'gbaderobusola/busola:my-app-1.1'
    }
   stages {
        stage('init') {
            steps {
                script {
                    gv = load "script.groovy"
                }
                echo 'loading groovy script'
                
            }
         }
        stage('build app') {
            steps {
               script {
                  echo 'building application jar...'
                  gv.buildJar()
               }
            }
        }
        stage('build image') {
            steps {
                script {
                   echo 'building docker image...'
                   buildimage(env.IMAGE_NAME)
                   dockerLogin()
                   dockerPush(env.IMAGE_NAME)
                }
            }
        }
       
       stage("deploy") {
            steps {
                script {
                    echo "deploying"
                    def ssh = 'bash ./shell.sh' 
                    sshagent(['Ubuntu-SSH']) {
                         sh "scp shell.sh ubuntu@100.26.238.152:/home/ubuntu"
                         sh "scp docker-compose.yaml ubuntu@100.26.238.152:/home/ubuntu"
                         sh "ssh -o StrictHostKeyChecking=no ubuntu@100.26.238.152 ${ssh}"
                        }
                    
                }
            }
        }
    }

    post {
        always {
            echo 'This will always run, regardless of the pipeline result.'
        }

        success {
            echo 'The pipeline has succeeded!'
        }

        failure {
            echo 'The pipeline has failedd.'
        }
    }
}
